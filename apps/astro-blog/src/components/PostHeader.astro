---
import SVG from '@jasikpark/astro-svg-loader'

export interface Props {
  frontmatter: {
    title: string
    createdAt: string
    categories: string[]
    tags: string[]
  }
}

const {
  frontmatter: { title, createdAt, categories, tags },
} = Astro.props
---

<header class="wrapper">
  <h1 class="title">{title}</h1>
  <div class="post-meta">
    <span class="date">
      <time>{createdAt}</time>
    </span>

    <span class="categories">
      in {
        categories.map((cat) => (
          <a class="link" href={`/post/category/${cat}/1`} rel="tag">
            {cat}
          </a>
        ))
      }
    </span>
  </div>
  <div class="tags">
    <SVG src={import('../images/tag.svg?raw')} width={11} height={11} />
    {
      tags.map((tag) => (
        <a class="link" href={`/post/tag/${tag}/1`} rel="tag">
          {tag}
        </a>
      ))
    }
  </div>
</header>

<style lang="scss">
  .wrapper {
    display: grid;
    margin-bottom: 35px;
  }

  .title {
    margin: 0 0 0.5rem;
  }

  .link,
  .link:visited {
    color: #777;

    &:hover {
      color: #333;
    }
  }

  .post-meta {
    margin: 0 0 0.5rem;

    * {
      text-transform: uppercase;
      line-height: 1.6em;
      letter-spacing: 1px;
      font-size: 12px;
      color: #777;
    }

    span + span {
      padding-left: 5px;
    }
  }

  .tags {
    font-size: 0.8em;
    color: #777;
    display: flex;
    align-items: center;
    gap: 7px;

    .icon-tag {
      display: inline-block;
      margin-right: 4px;
      width: 14px;
      height: 14px;
      margin-top: -4px;
      line-height: inherit;
      vertical-align: middle;
    }
  }
</style>
