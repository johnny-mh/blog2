---
import Tags from './Tags.astro'
interface Props {
  companyName: string
  duration?: string
  tags: string[]
  teamName: string
  title?: string
}

const { companyName, duration, tags, teamName, title } = Astro.props
---

<div class="flex flex-col gap-4 md:flex-row">
  <div class="w-full flex-none font-sg text-xl md:w-52">
    {duration}
  </div>
  <div class="flex flex-col gap-3 px-2 md:px-0">
    <div>
      <span class="mr-8 text-xl">{companyName}</span>
      <span>
        {teamName}
      </span>
      {
        title ? (
          <span class="relative ml-2 pl-4 after:absolute after:bottom-0 after:left-0 after:h-4 after:w-[1px] after:bg-th-border">
            {title}
          </span>
        ) : null
      }
    </div>
    <div
      class="prose prose-stone max-w-none leading-tight text-th-text-secondary prose-p:mb-3 prose-p:mt-0 prose-a:text-th-text"
    >
      <slot />
    </div>
    <div class="flex flex-wrap gap-3">
      <Tags prefix="" tags={tags} />
    </div>
  </div>
</div>
